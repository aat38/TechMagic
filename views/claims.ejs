<%- include("partials/header") %>


<% if (locals.claims) { %> 
<h1>
  Claims
</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Product</th>
      <th>Issue</th>
      <th>Description</th>
      <th>Technician</th>
      <th>Open Date</th>
      <th>Status</th>
      <th>Resolution</th>
    </tr>
  </thead>
  <% claims.forEach(result=>{ %>
  <% var dateOpened = new Date(result.dateopened) %>
  <% var dateOpened = dateOpened.getDate() + "/" +  (dateOpened.getMonth()+1) + "/" + dateOpened.getFullYear() %>

  <tbody>
    <tr>
      <td><%=result.customer%></td>
      <td><%=result.product%></td>
      <td><%=result.issue%></td>
      <td><%=result.description%></td>
      <td><%=result.employee%></td>
      <td><%= dateOpened %></td>
      <td><%=result.status%></td>
      <td><%=result.resolution%></td>
    </tr>    
  </tbody>
  <%})%>

</table>
</p>
<%}else{%>
<h1>
 No Open Claims Found
</h1>
<%}%>

<%- include("partials/footer") %>

