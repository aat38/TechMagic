<%- include("partials/header") %>

<% if (locals.claims) { %> 
  <h1>
    <%=claims[0].product%> Claims
  </h1>
<table class="table4">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Issue</th>
      <th>Status</th>
      <th>Resolution</th>
      <th>Date Opened</th>
      <th>Date Closed</th>
      <th>Technician</th>
    </tr>
  </thead>
  <tbody>
  <% claims.forEach(result=>{ %>
    <tr>
      <td><%=result.customer%></td>
      <td><%=result.issue%></td>
      <td><%=result.status%></td>
      <td><%=result.resolution%></td>
      <td><%=result.dateopened%></td>
      <td><%=result.dateclosed%></td>
      <td><%=result.employee%></td>
    </tr>   
  <%})%>
  </tbody>
</table>
<% } %>
